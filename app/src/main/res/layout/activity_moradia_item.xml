<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="16dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/moradia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_progress_bar"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/house_name"
            android:layout_width="291dp"
            android:layout_height="53dp"
            android:width="300dp"
            android:background="@color/azul"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="center"
            android:text="Moradia"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/house_img"
            app:layout_constraintStart_toStartOf="@+id/house_img"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/go_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/house_name"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/go_arrow_white" />


        <ImageView
            android:id="@+id/house_img"
            android:layout_width="214dp"
            android:layout_height="103dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_group_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/house_name"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="214dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/house_img">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="Desde"
                android:textColor="@color/azul"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/ad_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="10/03/2021"
                android:textColor="@color/azul"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/people_qnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/people_quantity_icon"
                android:fontFamily="@font/poppins_regular"
                android:text="2 pessoas"
                android:textColor="@color/azul"
                android:textSize="12dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>