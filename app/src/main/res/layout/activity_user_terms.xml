<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.UserTerms">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/blue_bloob_decoration" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/red_bloob_decoration" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Termos de Uso"
        android:textColor="@color/azul"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="136dp"
        android:layout_height="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/hestia" />

    <ImageView
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/go_back_arrow_dark_icon" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="470dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="1. Identificação de Pares"
                android:textColor="@color/azul_claro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Este Termo de Uso é celebrado entre você, usuário do aplicativo Héstia, e a DION, empresa responsável pelo desenvolvimento e manutenção do aplicativo."
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="2. Aceitação dos Termos"
                android:textColor="@color/azul_claro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Ao criar uma conta ou utilizar o Héstia, você concorda com estes Termos de Uso e com nossa Política de Privacidade. Reservamo-nos o direito de modificar estes termos a qualquer momento, sendo que as alterações entrarão em vigor a partir de sua publicação no aplicativo. Recomendamos que revise os termos regularmente."
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="3. Uso do Aplicativo"
                android:textColor="@color/azul_claro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="3.1 Eligibilidade"
                android:textColor="@color/azul_claro" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_regular"

                android:text="O Héstia pode ser utilizado por estudantes universitários que procuram acomodações próximas às suas universidades e por indivíduos que desejam cadastrar suas moradias para locação. Ao se cadastrar, você declara ser maior de 18 anos e garante que as informações fornecidas são verdadeiras e precisas."
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="3.2. Cadastro de Moradias"
                android:textColor="@color/azul_claro" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_regular"

                android:text="Os usuários que desejam cadastrar moradias devem fornecer informações precisas e detalhadas sobre a propriedade. Qualquer tentativa de enganar ou fraudar outros usuários resultará no encerramento imediato da conta."
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="4. Conteúdo Gerado pelo Usuário"
                android:textColor="@color/azul_claro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="4.1. Responsabilidade"
                android:textColor="@color/azul_claro" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_regular"

                android:text="Os usuários são os únicos responsáveis por qualquer conteúdo que publicarem, incluindo, mas não se limitando a, descrições de moradias e mensagens de chat."
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="4.2. Direitos de Uso"
                android:textColor="@color/azul_claro" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_regular"

                android:text="Ao publicar conteúdo no Héstia, você concede à DION uma licença não exclusiva, irrevogável e gratuita para utilizar, reproduzir, modificar e distribuir esse conteúdo para fins relacionados ao funcionamento e promoção do aplicativo."
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="5. Política de Privacidade"
                android:textColor="@color/azul_claro"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/poppins_regular"

                android:text="Nos comprometemos a proteger a sua privacidade. Coletamos dados pessoais necessários para a operação do aplicativo, como nome, e-mail, e localização aproximada. Esses dados são utilizados para facilitar a conexão entre universitários e anunciantes de moradias. Não compartilhamos suas informações pessoais com terceiros sem o seu consentimento, exceto conforme exigido por lei."
                android:textColor="@color/black" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>