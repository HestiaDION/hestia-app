<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageButton
        android:id="@+id/voltar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/voltar"
        app:srcCompat="@drawable/go_back_arrow_dark_icon" />

    <!-- Campo para informar qual tipo de usuário -->
    <TextView
        android:id="@+id/tipo_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/universitario"
        android:textSize="14sp" />

    <!-- Campo para falar do cadastro -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/primeira_vez_aqui"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/o_cadastro_e"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/simples"
            android:textColor="@color/vermelho"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/exclamacao"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Contêiner para os campos de texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <!-- Campo 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <!-- EditText -->
            <EditText
                android:id="@+id/campo1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/cadeado_icon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/nome_completo"
                android:inputType="text|textPersonName|textCapWords"
                android:padding="0dp" />

        </LinearLayout>

        <!-- Linha -->
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/azul" />

        <!-- Erro 1-->
        <TextView
            android:id="@+id/erro1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Erro"
            android:textColor="@color/vermelho"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Campo 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <!-- EditText -->
            <EditText
                android:id="@+id/campo2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/cadeado_icon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Cidade"
                android:inputType="text|textCapWords"
                android:padding="0dp" />

            <ImageButton
                android:id="@+id/ver_senha"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/open_eye_password_icon"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/selecionar_genero2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:srcCompat="@drawable/selecionar_genero" />

        </LinearLayout>

        <!-- Linha -->
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/azul" />

        <!-- Erro 2-->
        <TextView
            android:id="@+id/erro2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Erro"
            android:textColor="@color/vermelho"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Campo 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <!-- EditText -->
            <EditText
                android:id="@+id/campo3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/cadeado_icon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="CPF"
                android:inputType="text"
                android:padding="0dp" />

            <ImageButton
                android:id="@+id/ver_senha2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/open_eye_password_icon"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/calendario"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/calendar_icon"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Linha -->
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/azul" />

        <!-- Erro 3-->
        <TextView
            android:id="@+id/erro3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Erro"
            android:textColor="@color/vermelho"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Campo 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <!-- EditText -->
            <EditText
                android:id="@+id/campo4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/cadeado_icon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Data de nascimento"
                android:inputType="text|textEmailAddress"
                android:padding="0dp" />

            <ImageButton
                android:id="@+id/selecionar_genero"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:srcCompat="@drawable/selecionar_genero" />

            <ImageButton
                android:id="@+id/ver_senha3"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/open_eye_password_icon"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Linha -->
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/azul" />

        <!-- Erro 4-->
        <TextView
            android:id="@+id/erro4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Erro"
            android:textColor="@color/vermelho"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_acao"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/bt_cadastro"
        android:fontFamily="@font/poppins_regular"
        android:padding="10dp"
        android:stateListAnimator="@android:anim/fade_in"
        android:text="Próxima etapa"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progresso"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:indeterminateBehavior="repeat"
        android:max="100"
        android:maxHeight="20dip"
        android:minHeight="20dip"
        android:progress="0"
        android:progressDrawable="@drawable/custom_progress_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleX="1"
        android:scaleY="1"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="-20dp"
            android:scaleType="fitEnd"
            android:scaleX="1"
            android:scaleY="1"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/blue_bloob_decoration" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitEnd"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/red_bloob_decoration" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
