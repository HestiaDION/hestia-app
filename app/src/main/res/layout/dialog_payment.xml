<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:text="Efetuação de Pagamento"
        android:textColor="@color/azul_claro"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/qrCodeImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/qr_code_pagamento" />

    <TextView
        android:id="@+id/copyCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="8dp"
        android:text="Copiar Código"
        android:textColor="@color/vermelho_claro"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/azul_claro"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/paymentDoneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagamento Efetuado"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/stillPayingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ainda Pagando"
        android:visibility="gone"
        android:layout_marginTop="8dp" />
</LinearLayout>
