<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="299dp"
    android:layout_height="414dp"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/input_group_background">

        <ImageView
            android:id="@+id/houseImg"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_width="268dp"
            android:layout_height="183dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/input_group_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cNmMoradia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Moradia"
            android:textColor="@color/azul_medio"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/houseImg" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="192dp"
            android:layout_height="85dp"
            android:layout_marginTop="9dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/cNmMoradia"
            app:layout_constraintTop_toBottomOf="@+id/cNmMoradia">

            <TextView
                android:id="@+id/qntPessoas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/people_quantity_icon"
                android:drawablePadding="6dp"
                android:fontFamily="@font/poppins_regular"
                android:text="2 pessoas atualmente"
                android:textColor="#8000024D"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/iQntQuartos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/hanger_icon"
                android:drawablePadding="2dp"
                android:fontFamily="@font/poppins_regular"
                android:text="2 quartos"
                android:textColor="#8000024D"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/iQntPessoasMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/info_icon"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_regular"
                android:paddingLeft="6dp"
                android:text="Capacidade de 4 pessoas"
                android:textColor="#8000024D"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="R$ 437"
                android:textColor="@color/azul_medio"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/infoButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_width="227dp"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/login_button"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Mais informações"
            android:textAllCaps="false"
            android:textColor="@color/azul_mais_claro" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
